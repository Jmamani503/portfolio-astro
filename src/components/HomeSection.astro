---
import Github from "../icons/Github.astro";
import Linkedin from "../icons/Linkedin.astro";
import CurriculumVitae from "../icons/CurriculumVitae.astro";
import Mail from "../icons/Mail.astro";
import Link from "../icons/Link.astro";
import LinkButton from "./LinkButton.astro";
---

<div class="max-w-2xl py-52">
    <h3 class="text-2xl font-light">
      Hey there!, I'm 
      <strong class= "font-bold">
        Jaime
        </strong>
    </h3>
    <h1 class="text-6xl font-black text-[#00BD95]">Web Developer</h1>
    <p class="text-base py-6 font-thin">
        Looking for opportunities to apply my skills in challenging projects while growing both personally and professionally. Committed to contributing to the success of teams and projects.
    </p>
    <div class="flex justify-between items-center">
      <LinkButton>
        View My Resume
      </LinkButton>
      <ul class="flex gap-4">
        <li>
          <a href="https://x.com/home"></a>
          <Github
            class="w-8 h-8 transform transition-transform duration-300 ease-in-out hover:scale-125 hover:cursor-pointer hover:text-[#00BD95]"
          />
        </li>
        <li>
          <a href=""></a>
          <Linkedin
          class="w-8 h-8 transform transition-transform duration-300 ease-in-out hover:scale-125 hover:cursor-pointer hover:text-[#00BD95]"
          />
        </li>
        <li>
          <a href=""></a>
          <Mail
          class="w-8 h-8 transform transition-transform duration-300 ease-in-out hover:text-[#00BD95] hover:scale-125 hover:cursor-pointer"
          />
        </li>
